{
  "manifest_version": 2,

  "name": "MiniPlay",
  "short_name": "MiniPlay",
  "description": "Control web music players from anywhere in Chrome",
  "version": "0.5.0",

  "icons": {
     "16": "img/icon-16.png",
     "48": "img/icon-48.png",
    "128": "img/icon-128.png" },

  "author": "Jeff Chen",

  "homepage_url": "https://github.com/iambald/MiniPlay",

  "background": {
    "page": "background.html"
  },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "browser_action": {
    "default_icon": {
      "19": "img/icon-19.png",
      "38": "img/icon-38.png"
    },
    "default_title": "Google Play Music",
    "default_popup": "popup.html"
  },

  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "*://*/"  // for album art
  ],

  "content_scripts": [
    {
      "matches": ["*://play.google.com/music*", "*://*.pandora.com/*", "*://play.spotify.com/*"],
      "js": ["scripts/jquery.js", "scripts/loader.js", "scripts/socket.io.js"]
    }
  ],

  "options_page": "options.html",

  "commands": {
    "play": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Play/Pause",
      "global": true
    },
    "ff": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "Play next song",
      "global": true
    },
    "rew": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "Play previous song",
      "global": true
    },
    "up": {
      "description": "Thumbs up"
    },
    "down": {
      "description": "Thumbs down"
    },
    "shuffle": {
      "description": "Shuffle songs"
    },
    "repeat": {
      "description": "Repeat songs"
    }
  }
}
