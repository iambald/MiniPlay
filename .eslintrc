{
  "root": true,
  "ecmaVersion": 6,
  "extends": "airbnb-base",
  "globals": {
    "chrome": true,
    "$": true
  },
  "env": {
    "browser": true
  },
  "rules": {
    "comma-dangle": 0,
    "space-before-function-paren": [2, "never"],
    "arrow-parens": [2, "as-needed"],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "func-names": 0,
    "max-len": 0,
    "no-fallthrough": 0,
    "no-prototype-builtins": 0,
    "no-mixed-operators": 0,
    "no-continue": 0,
    "no-restricted-syntax": 0,
    "prefer-arrow-callback": 0,

    // TODO make eslint aware of included files
    "no-undef": 0,
    "no-unused-vars": 0
  }
}
